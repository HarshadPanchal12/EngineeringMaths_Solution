<!DOCTYPE html>
<html>
<head>
  <title>Progress - <%= user.username %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            'w3-dark': '#212529',
            'w3-light': '#f8f9fa',
            'w3-accent': '#007bff'
          }
        }
      }
    }
  </script>
</head>
<body class="bg-w3-dark text-white font-sans dark">
  <div class="max-w-2xl mx-auto p-6">
    <h1 class="text-3xl font-bold text-gray-100 mb-6">Progress - <%= user.username %></h1>
    <% if (progress && progress.length > 0) { %>
      <div class="bg-gray-800 p-6 rounded-lg shadow-md">
        <% progress.forEach(p => { %>
          <div class="mb-4 p-4 bg-gray-700 rounded">
            <h2 class="text-xl font-semibold text-blue-400">Chapter: <%= p.title %></h2>
            <p>Score: <%= p.score %> / <%= p.total %></p>
            <p>Percentage: <%= p.percentage %>%</p>
            <p>Date: <%= p.date.toLocaleDateString() %></p>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-gray-400">No progress recorded yet.</p>
    <% } %>
    <a href="/" class="bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700 mt-4 inline-block">Back to Home</a>
  </div>
</body>
</html>